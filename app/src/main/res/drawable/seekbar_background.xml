<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <!--<solid android:color="#cecece" />-->
            <gradient
                android:angle="0"
                android:endColor="#ff5628"
                android:centerColor="#2aa50e"
                android:startColor="#007fd4"
                android:type="linear" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <gradient android:angle="180"
                android:centerColor="#81C784"
                android:startColor="#ff5628"
                android:endColor="#007fd4"
                android:type="linear" />
            </shape>
        </clip>
    </item>

</layer-list>